# Railway Environment Variables for Weaviate

# Core Configuration
PERSISTENCE_DATA_PATH=/var/lib/weaviate
AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED=true
AUTHENTICATION_APIKEY_ENABLED=false
# AUTHENTICATION_APIKEY_ALLOWED_KEYS=your-api-key-here
# AUTHENTICATION_APIKEY_USERS=user1,user2

# Query Configuration
QUERY_DEFAULTS_LIMIT=25
QUERY_MAXIMUM_RESULTS=10000

# Vectorizer Configuration
DEFAULT_VECTORIZER_MODULE=none
# For text2vec-openai: DEFAULT_VECTORIZER_MODULE=text2vec-openai
# For text2vec-transformers: DEFAULT_VECTORIZER_MODULE=text2vec-transformers
# ENABLE_MODULES=text2vec-openai,text2vec-transformers,text2vec-cohere

# Performance Tuning (adjust based on Railway plan)
GOMAXPROCS=2
GOMEMLIMIT=1GiB
LIMIT_RESOURCES=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Cluster Configuration
CLUSTER_HOSTNAME=weaviate-node

# Backup Configuration (optional)
BACKUP_FILESYSTEM_PATH=/var/lib/weaviate/backups
# BACKUP_S3_BUCKET=your-bucket-name
# BACKUP_S3_ENDPOINT=s3.amazonaws.com
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# API Keys for Modules (add as needed)
# OPENAI_APIKEY=your-openai-api-key
# COHERE_APIKEY=your-cohere-api-key
# HUGGINGFACE_APIKEY=your-huggingface-api-key
